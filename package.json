{
  "name": "@sablier/v2-core",
  "description": "Core smart contracts of the Sablier V2 cryptoasset streaming protocol",
  "license": "BUSL-1.1",
  "version": "1.0.0",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablierhq/v2-core/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.2",
    "rimraf": "^4.1.2",
    "solhint": "^3.3.8",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "files": [
    "/src",
    "CHANGELOG.md"
  ],
  "homepage": "https://github.com/sablierhq/v2-core#readme",
  "keywords": [
    "asset-streaming",
    "blockchain",
    "cryptoassets",
    "ethereum",
    "foundry",
    "money-streaming",
    "real-time-finance",
    "sablier",
    "sablier-v2",
    "smart-contracts",
    "solidity",
    "token-streaming"
  ],
  "packageManager": "yarn@3.4.1",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sablierhq/v2-core"
  },
  "scripts": {
    "build": "forge build",
    "build:optimized": "FOUNDRY_PROFILE=optimized forge build",
    "build:smt": "FOUNDRY_PROFILE=smt forge build",
    "clean": "rimraf broadcast cache optimized-out out",
    "gas:report": "forge test --gas-report --no-match-path \"./test/e2e/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot": "forge snapshot --no-match-path \"./test/e2e/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "gas:snapshot:optimized": "yarn build:optimized && FOUNDRY_PROFILE=test-optimized forge snapshot --no-match-path \"./test/e2e/**/*.sol\" --no-match-test \"test(Fork)?(Fuzz)?_RevertWhen_\\w{1,}?\"",
    "lint": "yarn prettier:check",
    "lint:sol": "yarn solhint \"{script,src,test}/**/*.sol\"",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier:write": "prettier --write \"**/*.{json,md,sol,yml}\"",
    "prettier:check": "prettier --check \"**/*.{json,md,sol,yml}\"",
    "test": "forge test",
    "test:lite": "FOUNDRY_PROFILE=lite forge test",
    "test:optimized": "yarn build:optimized && FOUNDRY_PROFILE=test-optimized forge test"
  }
}
